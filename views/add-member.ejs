<%- include('partials/header') %>

<h1>Add a New Member</h1>
<p>Fill out the form below to add a new member to the directory.</p>

<form action="/members/add" method="POST" class="data-form">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" required>
    </div>

    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" required>
    </div>

    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="+15551234567" required>
        <small>Use international format for SMS (e.g., +1 for USA).</small>
    </div>

    <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email">
    </div>

    <button type="submit" class="button">Save Member</button>
</form>

<%- include('partials/footer') %>
