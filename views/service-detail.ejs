<%- include('partials/header') %>

<div class="card mb-4">
    <div class="card-header">
        <h1>Attendance for <%= service.topic %></h1>
    </div>
    <div class="card-body">
        <p><strong>Date:</strong> <%= new Date(service.serviceDateTime).toLocaleString() %></p>
        <p><strong>Speaker:</strong> <%= service.speaker %></p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/attendance/mark" method="POST">
            <input type="hidden" name="serviceId" value="<%= service._id %>">

            <div class="card">
                <div class="card-header">
                    <h2>Mark Attendance</h2>
                </div>
                <div class="card-body" style="max-height: 400px; overflow-y: auto;">
                    <% allMembers.forEach(member => { %>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="attendees" value="<%= member._id %>" id="member-<%= member._id %>"
                                <%= attendedMemberIds.has(member._id.toString()) ? 'checked' : '' %>>
                            <label class="form-check-label" for="member-<%= member._id %>">
                                <%= member.lastName %>, <%= member.firstName %>
                            </label>
                        </div>
                    <% }) %>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save Attendance</button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h2>Upload Attendance Sheet</h2>
            </div>
            <div class="card-body">
                <form action="/services/<%= service._id %>/upload-attendance" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="sheet" class="form-label">Select Excel File</label>
                        <input class="form-control" type="file" id="sheet" name="sheet" accept=".xlsx">
                    </div>
                    <button type="submit" class="btn btn-info">Upload Sheet</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h2>Follow-up Messages</h2>
            </div>
            <div class="card-body">
                <p>After saving, you can send automated text messages.</p>
                <form action="/services/<%= service._id %>/send-sms" method="POST">
                    <button type="submit" class="btn btn-secondary">Send SMS to All Members</button>
                </form>
                <% if (locals.sms_sent) { %>
                    <div class="alert alert-success mt-3">SMS messages have been queued for sending!</div>
                <% } %>
                <% if (locals.sms_error) { %>
                    <div class="alert alert-danger mt-3">There was an error sending the SMS messages. Check the console.</div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
